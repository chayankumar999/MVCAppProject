
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Log In Page";
}


<div class="container p-3">
      <div class="row pt-4">
<form asp-action="Login" method="post">
    <fieldset>

      <div class="form-group">
        <label for="username" class="form-label mt-4">Username</label>
        <input type="text" class="form-control" id="username"  name = "username" placeholder="admin">
      </div>

      <div class="form-group">
        <label for="password" class="form-label mt-4">Password</label>
        <input type="password" class="form-control" id="password" name = "password"  placeholder="admin">
      </div>

      <div class="form-group">
          <input id="login" type="submit" class="btn btn-primary" value="Log In">
          <button class="btn btn-secondary" onclick="location.href='@Url.Action("register", "Account")';return false;">Register</button>
          <button class="btn btn-secondary" onclick="location.href='@Url.Action("ForgetPassword", "Account")';return false;">Forget Password</button>
      </div>
    </fieldset>
  </form>
 </div>
</div>

<div>
    <a asp-controller="Home" asp-action="index" >Back to Home Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
