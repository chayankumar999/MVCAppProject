@{
	ViewData["Title"] = "Change Password";
    var username = ViewBag.username;
}



<div class="container p-3">
      <div class="row pt-4">
<form asp-action="ChangePassword" method="post">
    <fieldset>

      <div class="form-group">
        <label for="username" class="form-label mt-4">Username</label>
        <input type="text" class="form-control" name = "username" value=@username>
      </div>

      <div class="form-group">
        <label for="oldpassword" class="form-label mt-4">Old Password</label>
        <input type="password" class="form-control"  name = "oldpassword">
      </div>

      <div class="form-group">
        <label for="newpassword" class="form-label mt-4">New Password</label>
        <input type="password" class="form-control"  name = "newpassword">
      </div>
      <div class="form-group">
          <input id="login" type="submit" class="btn btn-primary" value="Submit">
      </div>
    </fieldset>
  </form>
    </div>
    </div>

<div>
    <a asp-action="userProfile">Back to User Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
