@{
	ViewData["Title"] = "Forget Password";
}




<div class="container p-3">
      <div class="row pt-4">
<form asp-action="ForgetPassword" method="post">
    <fieldset>
      <div class="form-group">
        <label for="email" class="form-label mt-4">Email</label>
        <input type="email" class="form-control"  name = "email" placeholder="admin@gmail.com">
      </div>

      <div class="form-group">
        <label for="username" class="form-label mt-4">Username</label>
        <input type="text" class="form-control" name = "username" placeholder="admin">
      </div>

      <div class="form-group">
        <label for="phone" class="form-label mt-4">New Password</label>
        <input type="tel" class="form-control"  name = "phone" placeholder="123-45-678">
      </div>
      <div class="form-group">
          <input type="submit" class="btn btn-primary" value="Submit">
      </div>
    </fieldset>
  </form>
    </div>
    </div>

   @if(@ViewBag.Password != null)
    {
        <div>
            <h5>This is your temporarry password is : @ViewBag.Password</h5>
            <p>Use this password to log in your account</p>
        </div>
    }

<div>
    <a asp-action="login">Back to login Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
